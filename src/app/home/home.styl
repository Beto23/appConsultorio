.header-home
	background #F6F6F6
	.img-logo
		height 4em
	&-nav
		background #007DAD
		.nav-items
			padding 1em 1.3em
			cursor pointer
			color white
			transition .5s background ease
		.nav-items:hover
			background black

.welcome-container
	background white
	&-info
		color white
		display flex
		flex-direction column
		align-items center
		justify-content center
		background #007DAD
		h3
			text-align center
			padding: 3em;
			border-bottom: 2px solid white;
			width: 90%;
			font-size: 1.5em !important
		.articles-items
			margin 3em 0
			&-servicio
				display flex
				flex-direction column
				align-items center
				img
					border-radius: 100%;
					border: 2px solid white;
					padding: .5em;
				h4, p, img
					margin-bottom 1em
				p
					text-align justify
	&-servicios
		padding 2em 0
		img
			height 15em
.img-parallax
	figure
		background-image url(./img/banner-2.jpg)
		background-size cover
		background-repeat no-repeat
		background-attachment fixed
		height 32.5em

footer
	background #F6F6F6
	height 7em
	.fa-github
		font-size 1.5em !important
